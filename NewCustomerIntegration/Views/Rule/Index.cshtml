@model IEnumerable<NewCustomerIntegration.Domain.Models.Rule>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayName("Type ID")
        </th>
        <th>
            @Html.DisplayName("Rule Name")
        </th>
        <th>
            @Html.DisplayName("Description")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ValueTypeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RuleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RuleDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RuleId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RuleId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RuleId })
        </td>
    </tr>
}

</table>
