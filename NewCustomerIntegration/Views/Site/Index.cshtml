@model IEnumerable<NewCustomerIntegration.Domain.Models.Site>

@{
    ViewBag.Title = "Site Index";
}

<h2>Site Index</h2>

<p>
    @Html.ActionLink("Create New Site", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayName("Org Code")
        </th>
        <th>
            @Html.DisplayName("Site Type")
        </th>
        <th>
            @Html.DisplayName("Site Name")
        </th>
        <th>
            @Html.DisplayName("Site Code")
        </th>
        <th>
            @Html.DisplayName("Time Zone")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Organization.OrganizationCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiteType.SiteTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiteName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiteCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeZoneId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SiteId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SiteId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SiteId })
        </td>
    </tr>
}

</table>
